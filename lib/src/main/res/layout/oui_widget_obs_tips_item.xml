<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="LinearLayout"
    tools:orientation="horizontal"
    tools:paddingVertical="16.0dp"
    tools:paddingHorizontal="16.0dp"
    tools:viewBindingIgnore="true">

    <ImageView
        android:id="@+id/tips_item_icon"
        android:layout_width="28.0dp"
        android:layout_height="28.0dp"
        android:layout_marginEnd="16.0dp"
        android:layout_gravity="center_vertical"
        android:visibility="gone"
        tools:visibility="visible"/>

    <LinearLayout
        android:layout_width="0.0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tips_item_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/RobotoMedium"
            android:textSize="20.0sp"
            android:textColor="?android:textColorPrimary"
            android:textAlignment="viewStart"
            android:maxLines="2"
            android:ellipsize="end"
            android:maxWidth="@dimen/obs_item_text_max_width"
            android:minWidth="@dimen/obs_item_text_min_width"

            tools:text="Tip title"/>

        <TextView
            android:id="@+id/tips_item_summary_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/RobotoRegular"
            android:layout_marginTop="2.0dp"
            android:textSize="14.0sp"
            android:textColor="?android:textColorSecondary"
            android:textAlignment="viewStart"
            android:lineSpacingExtra="4sp"
            android:visibility="gone"
            android:maxWidth="@dimen/obs_item_text_max_width"
            android:minWidth="@dimen/obs_item_text_min_width"
            tools:visibility="visible"
            tools:text="Tip summary"/>

    </LinearLayout>

</merge>