<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?colorControlHighlight">
    <item android:id="@+id/mask">
        <inset
            android:insetLeft="@dimen/oui_des_tip_popup_button_inset_horizontal"
            android:insetTop="@dimen/oui_des_tip_popup_button_inset_vertical"
            android:insetRight="@dimen/oui_des_tip_popup_button_inset_horizontal"
            android:insetBottom="@dimen/oui_des_tip_popup_button_inset_vertical">
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/sesl_button_corner_radius" />
                <padding
                    android:bottom="@dimen/oui_des_tip_popup_button_padding_vertical"
                    android:left="@dimen/oui_des_tip_popup_button_padding_horizontal"
                    android:right="@dimen/oui_des_tip_popup_button_padding_horizontal"
                    android:top="@dimen/oui_des_tip_popup_button_padding_vertical" />
            </shape>
        </inset>
    </item>
</ripple>