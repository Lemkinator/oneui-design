<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="OneUI" />

    <!-- RelatedCard -->
    <style name="OneUI.RelativeLinkTitleTextStyle">
        <item name="android:textSize">@dimen/oui_relative_link_title_text_size</item>
        <item name="android:textColor">@color/oui_relative_link_title_text_color</item>
        <item name="android:textAppearance">@style/RobotoRegular</item>
    </style>

    <style name="OneUI.RelativeLinkTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/oui_relative_link_item_background</item>
        <item name="android:textAppearance">@style/OneUI.RelativeLinkTextViewTextStyle</item>
    </style>

    <style name="OneUI.RelativeLinkTextViewTextStyle" parent="@style/RobotoRegular">
        <item name="android:textSize">@dimen/oui_relative_link_text_size</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
    </style>

    <!-- UnclickablePreference -->
    <style name="OneUI.UnclickablePreferenceTextStyle" parent="@style/RobotoRegular">
        <item name="android:textAppearance">?android:attr/textAppearanceListItem</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/oui_unclickablepref_text_color</item>
        <item name="android:textColorHighlight">?android:attr/colorControlHighlight</item>
        <item name="android:textColorLink">@color/oui_unclickablepref_link_text_color</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <!-- ToolbarLayout -->
    <style name="OneUI.MultiSelectionCheckboxTextStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/oui_primary_text_color</item>
        <item name="android:fontFamily">@string/sesl_font_family_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- AppInfoLayout -->
    <style name="OneUI.AppInfoButtonTextAppearance" parent="@style/RobotoMedium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/oui_appinfolayout_button_default_text_color</item>
    </style>

    <style name="OneUI.AppInfoButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">44dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAppearance">@style/OneUI.AppInfoButtonTextAppearance</item>
        <item name="android:background">@drawable/oui_btn_app_info</item>
    </style>

    <style name="OneUI.AppInfoMainButton" parent="OneUI.AppInfoButton">
        <item name="android:backgroundTint">@color/oui_btn_colored_background</item>
        <item name="android:textColor">@color/oui_appinfolayout_button_primary_text_color</item>
    </style>

    <style name="OneUI.AppInfoStyle" parent="" tools:ignore="PrivateResource">
        <item name="appTitleTextColor">@color/oui_appinfolayout_app_label_text_color</item>
        <item name="appInfoTextColor">@color/oui_appinfolayout_sub_text_color</item>
        <item name="mainButtonStyle">@style/OneUI.AppInfoMainButton</item>
        <item name="bottomButtonsStyle">@style/OneUI.AppInfoButton</item>
    </style>


    <!-- Buttons -->
    <style name="OneUI.ButtonStyleColored" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/oui_btn_colored_background</item>
    </style>

    <style name="OneUI.ButtonStyleTransparent" parent="Widget.AppCompat.Light.Button">
        <item name="android:background">@drawable/oui_btn_transparent</item>
    </style>

    <style name="OneUI.ButtonStyleOutline" parent="Widget.AppCompat.Light.Button">
        <item name="android:background">@drawable/oui_btn_outline</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:minWidth">196dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:paddingStart">16.5dp</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingEnd">16.5dp</item>
        <item name="android:paddingBottom">9dp</item>
        <item name="android:textColor">@color/oui_btn_text_color</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- TipsCardPreference -->
    <style name="OneUI.TipsCardTextButtonStyle" parent="@android:style/Widget">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/oui_preference_tipscard_button_bg</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/oui_primary_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@string/sesl_font_family_regular</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- TipPopup -->
    <style name="OneUI.TipPopupButtonStyle" parent="@android:style/Widget">
        <item name="android:textAppearance">@style/OneUI.TipPopupButtonTextStyle</item>
        <item name="android:background">@drawable/sem_tip_popup_btn_borderless</item>
        <item name="android:minWidth">@dimen/sem_tip_popup_balloon_button_minwidth</item>
        <item name="android:minHeight">@dimen/sem_tip_popup_balloon_button_minheight</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="OneUI.TipPopupButtonTextStyle" parent="@android:style/Widget">
        <item name="android:textSize">@dimen/sem_tip_popup_balloon_action_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/sem_tip_popup_text_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sec-medium</item>
    </style>

    <style name="OneUI.TipPopupTextStyle" parent="@android:style/Widget">
        <item name="android:textSize">@dimen/sem_tip_popup_balloon_message_text_size</item>
        <item name="android:textColor">@color/sem_tip_popup_text_color</item>
        <item name="android:fontFamily">sec</item>
    </style>


    <style name="OneUI.SeekBarProTitleTextAppearance" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:textFontWeight" tools:ignore="NewApi">600</item>
    </style>

    <style name="OneUI.SeekBarProLabelTextAppearance" parent="@style/RobotoRegular">
        <item name="android:textColor">@color/text_color_slider_dialog_label</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="OneUI.SeekBarPreferencePro" parent="@style/Preference.SeekBarPreference">
        <item name="android:layout">@layout/oui_preference_seekbar_pro_layout</item>
    </style>

    <style name="OneUI.SeekBarPreferencePro.Widget.Button.Add" parent="">
        <item name="android:background">@drawable/icon_button_background</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_width">32dp</item>
        <item name="android:src">@drawable/oui_preference_seekbar_pro_plus</item>
    </style>

    <style name="OneUI.SeekBarPreferencePro.Widget.Button.Delete" parent="@style/OneUI.SeekBarPreferencePro.Widget.Button.Add">
        <item name="android:src">@drawable/oui_preference_seekbar_pro_minus</item>
    </style>

    <!-- List Divider-->
    <style name="OneUI.ListDividerStyle" >
        <item name="android:background">?attr/listDividerColor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/sesl_list_divider_height</item>
        <item name="android:layout_marginStart">?listPreferredItemPaddingStart</item>
        <item name="android:layout_marginEnd">?listPreferredItemPaddingEnd</item>
    </style>

    <!--FloatingActionButton-->
    <style name="OneUI.FloatingActionButton" parent="@style/Widget.Design.FloatingActionButton">
        <item name="hoveredFocusedTranslationZ">6dp</item>
        <item name="pressedTranslationZ">6dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tint">?android:colorPrimary</item>
        <item name="backgroundTint">@color/fab_bg_tint_color</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
    </style>

    <style name="OneUI.ThemeOverlay.AlertDialog.Light" parent="@style/ThemeOverlay.AppCompat.Light.Dialog.Alert">
        <!--Ensure this is enabled. Calling context's theme might have this disabled. -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="OneUI.BottomSheetDialog.Light" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/OneUI.BottomSheetStyle</item>
        <item name="android:backgroundDimAmount">.32</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="OneUI.BottomSheetDialog" parent="@style/Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/OneUI.BottomSheetStyle</item>
        <item name="android:backgroundDimAmount">.32</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--    <item format="float" name="container_opacity" type="dimen">0.35</item>-->

    <style name="OneUI.BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottomsheet_bg</item>
        <item name="android:maxWidth">600dp</item>->
    </style>

    <style name="OneUI.BottomSheet.DragHandle" parent="">
        <item name="srcCompat">@drawable/bottomsheet_drag_handle</item>
        <item name="android:scaleType">center</item>
        <item name="android:contentDescription">@string/bottomsheet_drag_handle_content_description</item>
        <item name="android:minWidth">@dimen/mtrl_min_touch_target_size</item>
        <item name="android:minHeight">@dimen/mtrl_min_touch_target_size</item>
        <item name="android:paddingBottom">@dimen/m3_bottom_sheet_drag_handle_bottom_padding</item>
        <item name="android:alpha">0.85</item>
        <item name="tint">?colorControlNormal</item>
    </style>

    <style name="OneUI.SearchHighlightedTextAppearance" parent="RobotoMedium">
        <item name="android:textColor">?colorPrimaryDark</item>
    </style>

    <!--Note: No separate color resource was added for dark mode
    in the framework SESL theming meta XML. Dynamic colors for both light and dark
    modes, however, resolve to the same value. Therefore, we are using the same color resource
    as the light theme, but we need to override the default color values for dark mode.-->
    <style name="OneUI.TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/sesl_tablayout_selected_indicator_color</item>
        <item name="tabSelectedTextColor">@color/sesl_tablayout_selected_text_color</item>
    </style>

    <style name="OneUI.TabLayoutStyle.Light" parent="Widget.Design.TabLayout.Light">
        <item name="tabIndicatorColor">@color/sesl_tablayout_selected_indicator_color</item>
        <item name="tabSelectedTextColor">@color/sesl_tablayout_selected_text_color</item>
    </style>

    <style name="OneUI.StartEndTimePickerTab">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/start_end_time_picker_tab_height</item>
        <item name="android:layout_marginTop">@dimen/start_end_time_picker_tab_margin_top</item>
        <item name="android:layout_marginStart">@dimen/start_end_time_picker_tab_margin</item>
        <item name="android:layout_marginEnd">@dimen/start_end_time_picker_tab_margin</item>
    </style>

    <style name="OneUI.StartEndTimePickerDialog" parent="@style/Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">never</item>
    </style>

</resources>