<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="OneUITheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:listChoiceBackgroundIndicator">?attr/listChoiceBackgroundIndicator</item>

        <item name="android:statusBarColor">@color/sesl_round_and_bgcolor_light</item>
        <item name="android:windowBackground">@color/sesl_round_and_bgcolor_light</item>
        <item name="android:navigationBarColor">@color/sesl_round_and_bgcolor_light</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>

        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>

        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/sesl_round_and_bgcolor_light</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@color/sesl_round_and_bgcolor_light</item>

        <item name="collapsingToolbarLayoutStyle">@style/Widget.Design.Light.CollapsingToolbar</item>
        <item name="bottomNavigationStyle">@style/Widget.Design.Light.BottomNavigationView</item>
        <item name="tabStyle">@style/OneUI.TabLayoutStyle.Light</item>

        <item name="seekBarPreferenceProStyle">@style/OneUI.SeekBarPreferencePro</item>

        <item name="floatingActionButtonStyle">@style/OneUI.FloatingActionButton</item>

        <item name="bottomNavigationTextStyle">@style/Widget.Design.Light.BottomNavigationView.Text</item>

        <item name="alertDialogTheme">@style/OneUI.ThemeOverlay.AlertDialog.Light</item>

        <item name="bottomSheetDialogTheme">@style/OneUI.BottomSheetDialog.Light</item>
        <item name="bottomSheetDragHandleStyle">@style/OneUI.BottomSheet.DragHandle</item>

        <item name="drawerBackgroundColor">@color/oui_des_drawerlayout_drawer_bg_color</item>
        <item name="drawerSelectedBackgroundColor">@color/oui_des_drawer_menu_item_selected_bg_color</item>

        <item name="android:buttonStyle">@style/Widget.AppCompat.Light.Button</item>
        <item name="android:spinnerStyle">@style/Widget.AppCompat.Light.Spinner</item>
        <item name="android:editTextStyle">@style/Widget.AppCompat.Light.EditText</item>

        <item name="datePickerDialogTheme">@style/Theme.AppCompat.Light.PickerDialog.DatePicker</item>
        <item name="timePickerDialogTheme">@style/Theme.AppCompat.Light.PickerDialog.TimePicker</item>
    </style>

    <style name="OneUI.ContainedButtonTheme" parent="@style/Widget.AppCompat.Button.Custom">
        <item name="android:textSize">17sp</item>
        <item name="buttonCornerRadius">26dp</item>
    </style>

    <style name="OneUI.ContainedPrimaryColorButtonTheme" parent="@style/OneUI.ContainedButtonTheme">
        <item name="android:textColor">@color/oui_des_btn_contained_primary_text</item>
        <item name="colorButtonNormal">@color/oui_des_enabled_disabled_primary_color_selector</item>
    </style>

    <style name="OneUI.ContainedTransparentButtonTheme" parent="@style/OneUI.ContainedButtonTheme">
        <item name="colorButtonNormal">@color/oui_des_transparent_btn_color_selector</item>
    </style>

</resources>